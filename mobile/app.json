{
  "expo": {
    "name": "Zenda",
    "slug": "zenda",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#6366f1"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.rubianejoaquim.zenda",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Este app usa Face ID para autenticação rápida e segura.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "usesCleartextTraffic": true,
      "package": "com.rubianejoaquim.zenda"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Este app usa Face ID para autenticação rápida e segura."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "eed2db02-a05b-4292-9a7c-777b198b7b6e"
      }
    }
  }
}
